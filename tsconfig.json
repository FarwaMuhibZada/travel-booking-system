{
  "compilerOptions": {
    "target": "ES2016",                                   // Set JavaScript language version
    "module": "NodeNext",                                // Use modern Node.js module system
    "rootDir": "./src",                                  // Specify root directory of source files
    "outDir": "./build",                                 // Specify output directory for compiled files
    "strict": true,                                      // Enable strict type-checking options
    "esModuleInterop": true,                             // Better interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                                // Skip type checking of all .d.ts files
    "forceConsistentCasingInFileNames": true,            // Ensure consistent casing in file names
    "noImplicitAny": true,                               // Disallow implicit 'any' types
    "moduleResolution": "nodenext",                         // Use Node.js module resolution
    "resolveJsonModule": true                           // Enable importing JSON modules
  }
}
